<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActionBar"
    tools:context=".About">
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageTop"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="center"
                android:src="@mipmap/background2" />

            <ImageView
                android:id="@+id/imageAvatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/imageTop"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="-74dp"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/nameApp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/imageAvatar"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-black"
                android:text="WALLPAPER"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/version"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@id/nameApp"
                android:text="Version 1.0.0"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_below="@id/version"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="30dp">
                <ImageView
                    android:id="@+id/link_facebook"
                    android:layout_weight="1"
                    android:src="@drawable/ic_facebook_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/link_gmail"
                    android:layout_weight="1"
                    android:src="@drawable/ic_gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/link_instargam"
                    android:layout_weight="1"
                    android:src="@drawable/ic_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.LinearLayoutCompat>
            <View
                android:layout_marginTop="50dp"
                android:id="@+id/viewLine"
                android:layout_below="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

            <TextView
                android:id="@+id/owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewLine"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="Owner : Nguyen Van Lam"
                android:textColor="#fff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/owner"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Wallpaper is an application that helps users easily find wallpaper according to their preferences and set it as a phone wallpaper. Application provides new wallpaper every day."

                android:textColor="#fff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/openSoucre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Open source"
                android:textColor="#fff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/openSoucre"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="I share the application source code on github. If you want to learn about it or visit here"
                android:textColor="#fff"
                android:textSize="16dp" />
            <ImageView
                android:id="@+id/link_github"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/visit"
                android:layout_width="match_parent"
                android:src="@drawable/ic_github"
                android:layout_height="40dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>